<UserControl x:Class="Magitek.Views.UserControls.Ninja.FightLogic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enums="clr-namespace:Magitek.Enumerations"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ObjectDataProvider x:Key="PotionEnum"
                    MethodName="GetValues"
                    ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:PotionEnum"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
        <controls:SettingsBlock Margin="0,5,0,0"
                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Margin="3"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap">
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic}"/>: <LineBreak/>       
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Description}"/> <LineBreak/>
                    <LineBreak/>
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Limitation}"/>
                </TextBlock>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Ninja_Content_FightLogic_Use_Shade_Shift}"
                                IsChecked="{Binding NinjaSettings.FightLogicShadeShift, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Generic_Fightlogic_Use_Feint}"
                                IsChecked="{Binding NinjaSettings.FightLogicFeint, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Generic_Fightlogic_Use_Knockback}"
                                IsChecked="{Binding NinjaSettings.FightLogicKnockback, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>        
        </StackPanel>
    </ScrollViewer>
</UserControl>