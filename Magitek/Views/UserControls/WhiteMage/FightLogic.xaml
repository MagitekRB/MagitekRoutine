<UserControl x:Class="Magitek.Views.UserControls.WhiteMage.FightLogic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
        d:DesignWidth="500"
        mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
        <controls:SettingsBlock Margin="0,5"
                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5"
                    Orientation="Vertical">
                <TextBlock Margin="3"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap">
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic}"/>: <LineBreak/>       
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Description}"/> <LineBreak/>
                    <LineBreak/>
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Limitation}"/>
                </TextBlock>
                <TextBlock Margin="0,5"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap"
                        Text="{x:Static properties:Resources.Generic_Tankbusters}"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Divine_Benison}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicDivineBenison, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Aquaveil}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicAquaveil, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <TextBlock Margin="0,5"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap"
                        Text="{x:Static properties:Resources.Generic_Party_Aoe}"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Divine_Caress}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicDivineCaress, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Temperance}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicTemperance, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Liturgy_Of_The_Bell}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicLiturgyoftheBell, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Asylum}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicAsylum, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Plenary_Indulgence}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicPlenaryIndulgence, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Medica_2}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicMedica2, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Knockback}"
                            IsChecked="{Binding WhiteMageSettings.FightLogicKnockback, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>        
        </StackPanel>
    </ScrollViewer>
</UserControl>
