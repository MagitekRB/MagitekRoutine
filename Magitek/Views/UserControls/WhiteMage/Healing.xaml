<UserControl x:Class="Magitek.Views.UserControls.WhiteMage.Healing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="550"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
    </UserControl.Resources>

    <StackPanel Margin="10">

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">

        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Aoe_Heal_When_Allies_Need_Healing_}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Light_Party}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.AoeNeedHealingLightParty, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Full_Party}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.AoeNeedHealingFullParty, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Disable_Single_Healing_When_alli}" IsChecked="{Binding WhiteMageSettings.DisableSingleHealWhenNeedAoeHealing, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.AoEHealHealthPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Interrupt_Healing_If_Target_HP_Gets_Over}" IsChecked="{Binding WhiteMageSettings.InterruptHealing, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" Margin="3,0" Value="{Binding WhiteMageSettings.InterruptHealingHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Percent}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Row="0" Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Raise}" IsChecked="{Binding WhiteMageSettings.SlowcastRes, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Grid.Row="0" Grid.Column="1" Margin="5,0" Content="{x:Static properties:Resources.WhiteMage_Content_Swiftcast_Raise}" IsChecked="{Binding WhiteMageSettings.SwiftcastRes, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Grid.Row="0" Grid.Column="2" Margin="5,0" Content="{x:Static properties:Resources.WhiteMage_Content_Raise_Out_of_Combat}" IsChecked="{Binding WhiteMageSettings.ResOutOfCombat, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </Grid>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Resurrection_Delay}" />
                    <controls:Numeric MinValue="0" MaxValue="10" Value="{Binding WhiteMageSettings.ResDelay, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Seconds}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Cure}" IsChecked="{Binding WhiteMageSettings.Cure, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.CureHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Cure_2}" IsChecked="{Binding WhiteMageSettings.Cure2, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.Cure2HealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Cure_3}" IsChecked="{Binding WhiteMageSettings.Cure3, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.Cure3HealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Medica}" IsChecked="{Binding WhiteMageSettings.Medica, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.MedicaHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Medica_2}" IsChecked="{Binding WhiteMageSettings.Medica2, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.Medica2HealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Medica_3}" IsChecked="{Binding WhiteMageSettings.Medica3, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.Medica2HealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Asylum}" IsChecked="{Binding WhiteMageSettings.Asylum, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.AsylumHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Afflatus_Rapture}" IsChecked="{Binding WhiteMageSettings.AfflatusRapture, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.AfflatusRaptureHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Afflatus_Solace}" IsChecked="{Binding WhiteMageSettings.AfflatusSolace, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.AfflatusSolaceHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Grid.Column="3" Margin="10,0" Content="{x:Static properties:Resources.Generic_On_Tank_Only}" IsChecked="{Binding WhiteMageSettings.AfflatusSolaceTankOnly, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Tetragrammaton}" IsChecked="{Binding WhiteMageSettings.Tetragrammaton, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.TetragrammatonHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Grid.Column="3" Margin="10,0" Content="{x:Static properties:Resources.Generic_On_Tank_Only}" IsChecked="{Binding WhiteMageSettings.TetragrammatonTankOnly, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.WhiteMage_Content_Benediction}" IsChecked="{Binding WhiteMageSettings.Benediction, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.BenedictionHealthPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Grid.Column="3" Margin="10,0" Content="{x:Static properties:Resources.Generic_On_Tank_Only}" IsChecked="{Binding WhiteMageSettings.BenedictionTankOnly, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Liturgy_Of_The_Bell}" IsChecked="{Binding WhiteMageSettings.LiturgyOfTheBell, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.WhiteMage_Text_When_Party_Members_Are_Below}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding WhiteMageSettings.LiturgyOfTheBellHealthPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <CheckBox Content="{x:Static properties:Resources.WhiteMage_Content_Place_healing_blossom_on_the_par}" IsChecked="{Binding WhiteMageSettings.LiturgyOfTheBellCenterParty, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5,0,0" Background="{DynamicResource ClassSelectorBackground}">
            <CheckBox  Margin="5" Content="{x:Static properties:Resources.WhiteMage_Content_Place_asylum_on_the_party_member}" IsChecked="{Binding WhiteMageSettings.AsylumCenterParty, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
        </controls:SettingsBlock>


    </StackPanel>

</UserControl>