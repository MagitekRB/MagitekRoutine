<UserControl x:Class="Magitek.Views.UserControls.Gunbreaker.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:common="clr-namespace:Magitek.Views.UserControls.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <StackPanel Margin="5">
        <common:PvpUtilities DataContext="{Binding GunbreakerSettings}"/>


        <controls:SettingsBlock Margin="0,5,0,0"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_General}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_GnashingFang_Combo}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_GnashingFangCombo, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Continuation}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_Continuation, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Burst_Strike}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_BurstStrike, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Rough_Divide}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_RoughDivide, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Rough_Divide_Only_in_Melee_Rang}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_SafeRoughDivide, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Relentless_Rush_LB_when_there_i}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_RelentlessRush, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="1"
                                      Grid.Column="1"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding GunbreakerSettings.Pvp_RelentlessRushEnemyCount, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="1"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Gunbreaker_Text_Enemy_nearby}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Heart_of_Corundum}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_HeartOfCorundum, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Fated_Circle}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_FatedCircle, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5,0,0"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Margin="0,0,0,5"
                           Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_Buffs}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Nebula}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_Nebula, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_BlastingZone}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_BlastingZone, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Gunbreaker_Content_Aurora}"
                              IsChecked="{Binding GunbreakerSettings.Pvp_Aurora, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>
    </StackPanel>
</UserControl>

