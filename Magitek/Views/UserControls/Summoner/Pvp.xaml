<UserControl x:Class="Magitek.Views.UserControls.Summoner.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:common="clr-namespace:Magitek.Views.UserControls.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <StackPanel Margin="5">
        <common:PvpUtilities DataContext="{Binding SummonerSettings}"/>

        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_General}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Summoner_Content_Radiant_Aegis_At}"
                              IsChecked="{Binding SummonerSettings.Pvp_UsedRadiantAegis, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding SummonerSettings.Pvp_UseRadiantAegisHealthPercent, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Summoner_Text_Health_Percent}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Crimson_Cyclone_Rush_forward}"
                              IsChecked="{Binding SummonerSettings.Pvp_UsedCrimsonCyclone, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Crimson_Strike_Heavy_knockback}"
                              IsChecked="{Binding SummonerSettings.Pvp_UsedCrimsonStrike, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Necrotize_Grants_Further_Ruin_sta}"
                              IsChecked="{Binding SummonerSettings.Pvp_UsedNecrotize, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Slipstream}"
                              IsChecked="{Binding SummonerSettings.Pvp_UsedSlipstream, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Mountain_Buster}"
                              IsChecked="{Binding SummonerSettings.Pvp_UsedMountainBuster, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Summon_LB}"
                              IsChecked="{Binding SummonerSettings.Pvp_Summon, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Foreground="White"
                              Content="{x:Static properties:Resources.Summoner_Content_Bahamut}"
                              IsChecked="{Binding SummonerSettings.Pvp_SummonBahamut, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Foreground="White"
                              Content="{x:Static properties:Resources.Summoner_Content_Phoenix}"
                              IsChecked="{Binding SummonerSettings.Pvp_SummonPhoenix, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Foreground="White"
                              Content="{x:Static properties:Resources.Summoner_Content_Auto}"
                              IsChecked="{Binding SummonerSettings.Pvp_SummonAuto, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>

                <StackPanel Margin="5">
                    <StackPanel Margin="25,5,5,5"
                                Orientation="Horizontal">
                        <TextBlock Text="{x:Static properties:Resources.Summoner_Text_Phoenix_when_self_health_below}"
                                   Style="{DynamicResource TextBlockDefault}"/>
                        <controls:Numeric MaxValue="100"
                                          MinValue="1"
                                          Value="{Binding SummonerSettings.Pvp_SummonPhoenixHealthPercent, Mode=TwoWay}"/>
                        <TextBlock Text="%"
                                   Style="{DynamicResource TextBlockDefault}"/>
                    </StackPanel>
                    <StackPanel Margin="25,5,5,5"
                                Orientation="Horizontal">
                        <TextBlock Text="{x:Static properties:Resources.Summoner_Text_Bahamut_when_enemy_health_below}"
                                   Style="{DynamicResource TextBlockDefault}"/>
                        <controls:Numeric MaxValue="100"
                                          MinValue="1"
                                          Value="{Binding SummonerSettings.Pvp_SummonBahamutEnemyHealthPercent, Mode=TwoWay}"/>
                        <TextBlock Text="%"
                                   Style="{DynamicResource TextBlockDefault}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

    </StackPanel>
</UserControl>

