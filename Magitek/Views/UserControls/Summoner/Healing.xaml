<UserControl x:Class="Magitek.Views.UserControls.Summoner.Healing" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties" 
             xmlns:controls="clr-namespace:Magitek.Controls" 
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
    </UserControl.Resources>

    <StackPanel Margin="10">

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Auto_Raise}" IsChecked="{Binding SummonerSettings.SwiftcastRes, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Resurrection_Delay}" />
                    <controls:Numeric MinValue="0" MaxValue="10" Value="{Binding SummonerSettings.ResDelay, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="seconds" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Lux_Solaris_when_party_members_be}" IsChecked="{Binding SummonerSettings.LuxSolaris, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding SummonerSettings.LuxSolarisHpPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Summoner_Text_Health_Percent}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Physick_Solo_When_Below}" IsChecked="{Binding SummonerSettings.Physick, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding SummonerSettings.PhysickHpPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Summoner_Text_Health_Percent}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="0,3,0,0" Content="{x:Static properties:Resources.Summoner_Content_Physick_Party_When_Below}" IsChecked="{Binding SummonerSettings.PhysickInGroup, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding SummonerSettings.PhysickPartyHpPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Summoner_Text_Health_Percent}" />
                    <CheckBox Margin="0,3,0,0" Content="{x:Static properties:Resources.Summoner_Content_When_Theres_No_Healer_Present_or_}" IsChecked="{Binding SummonerSettings.PhysickInGroupIfNoPresentHealer, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Ignore_Alliance}" IsChecked="{Binding SummonerSettings.IgnoreAlliance, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />

                <CheckBox Margin="0,7,0,0" Content="{x:Static properties:Resources.Generic_Heal_Alliance_Tanks}" IsChecked="{Binding SummonerSettings.HealAllianceTanks, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <CheckBox Margin="0,3" Content="{x:Static properties:Resources.Generic_Heal_Alliance_Healers}" IsChecked="{Binding SummonerSettings.HealAllianceHealers, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <CheckBox Content="{x:Static properties:Resources.Generic_Heal_Alliance_Dps}" IsChecked="{Binding SummonerSettings.HealAllianceDps, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />

                <CheckBox Margin="0,7,0,0" Content="{x:Static properties:Resources.Summoner_Content_Raise_Alliance_Tanks}" IsChecked="{Binding SummonerSettings.ResAllianceTanks, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <CheckBox Margin="0,3" Content="{x:Static properties:Resources.Summoner_Content_Raise_Alliance_Healers}" IsChecked="{Binding SummonerSettings.ResAllianceHealers, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Raise_Alliance_DPS}" IsChecked="{Binding SummonerSettings.ResAllianceDps, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5" Orientation="Horizontal">
                <CheckBox Content="{x:Static properties:Resources.Summoner_Content_Heal_Party_Member_Pets}" IsChecked="{Binding SummonerSettings.IgnoreAlliance, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <CheckBox Margin="10,0,0,0" Content="{x:Static properties:Resources.Summoner_Content_Only_Titan}" IsChecked="{Binding SummonerSettings.IgnoreAlliance, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
            </StackPanel>
        </controls:SettingsBlock>


    </StackPanel>

</UserControl>