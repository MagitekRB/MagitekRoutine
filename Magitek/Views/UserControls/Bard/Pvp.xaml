<UserControl x:Class="Magitek.Views.UserControls.Bard.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:common="clr-namespace:Magitek.Views.UserControls.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="5">
        <common:PvpUtilities DataContext="{Binding BardSettings}"/>


        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel>
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_General}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Powerful_Shot}"
                              IsChecked="{Binding BardSettings.Pvp_PowerfulShot, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Apex_Arrow}"
                              IsChecked="{Binding BardSettings.Pvp_ApexArrow, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Blast_Arrow}"
                              IsChecked="{Binding BardSettings.Pvp_BlastArrow, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Silent_Nocturne}"
                              IsChecked="{Binding BardSettings.Pvp_SilentNocturne, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Repelling_Shot}"
                              IsChecked="{Binding BardSettings.Pvp_RepellingShot, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Wardens_Paean}"
                              IsChecked="{Binding BardSettings.Pvp_WardensPaean, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Harmonic_Arrow}"
                              IsChecked="{Binding BardSettings.Pvp_HarmonicArrow, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Encore_of_Light}"
                              IsChecked="{Binding BardSettings.Pvp_EncoreOfLight, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Pitch_Perfect}"
                              IsChecked="{Binding BardSettings.Pvp_PitchPerfect, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Final_Fantasia_LB}"
                              IsChecked="{Binding BardSettings.Pvp_UseFinalFantasia, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding BardSettings.Pvp_FinalFantasiaHealthPercent, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Generic_Hp}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Bard_Content_Harmonic_Arrow_at}"
                              IsChecked="{Binding BardSettings.Pvp_HarmonicArrow, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding BardSettings.Pvp_HarmonicArrowHealthPercent, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Generic_Hp}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>

