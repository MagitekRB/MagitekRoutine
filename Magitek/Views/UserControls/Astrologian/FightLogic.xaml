<UserControl x:Class="Magitek.Views.UserControls.Astrologian.FightLogic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5"
                        Orientation="Vertical">
                <TextBlock Margin="3"
                           Style="{DynamicResource TextBlockDefault}"
                           TextWrapping="Wrap">
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic}"/>: <LineBreak/>       
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Description}"/> <LineBreak/>
                    <LineBreak/>
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Limitation}"/>
                </TextBlock>
                <TextBlock Margin="0,5"
                           Style="{DynamicResource TextBlockDefault}"
                           TextWrapping="Wrap"
                           Text="{x:Static properties:Resources.Generic_Tankbusters}"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Exaltation}"
                              IsChecked="{Binding AstrologianSettings.FightLogicExaltation, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Celestial_Intersection}"
                              IsChecked="{Binding AstrologianSettings.FightLogicCelestialIntersection, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <TextBlock Margin="0,5"
                           Style="{DynamicResource TextBlockDefault}"
                           TextWrapping="Wrap"
                           Text="{x:Static properties:Resources.Astrologian_Text_Party_AoE}"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Neutral_Sect}"
                              IsChecked="{Binding AstrologianSettings.FightLogicNeutralSect, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Earthly_Star}"
                              IsChecked="{Binding AstrologianSettings.FightLogicEarthlyStar, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Collective_Unconscious}"
                              IsChecked="{Binding AstrologianSettings.FightLogicCollectiveUnconscious, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Horoscope}"
                              IsChecked="{Binding AstrologianSettings.FightLogicHoroscope, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Aspected_Helios}"
                              IsChecked="{Binding AstrologianSettings.FightLogicAspectedHelios, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Knockback}"
                              IsChecked="{Binding AstrologianSettings.FightLogicKnockback, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
