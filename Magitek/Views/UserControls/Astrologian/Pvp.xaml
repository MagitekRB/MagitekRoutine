<UserControl x:Class="Magitek.Views.UserControls.Astrologian.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:common="clr-namespace:Magitek.Views.UserControls.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Magitek.Views.UserControls.Astrologian"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="470"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="5">
        <common:PvpUtilities DataContext="{Binding AstrologianSettings}"/>


        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_General}"/>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Fall_Malefic}"
                              IsChecked="{Binding AstrologianSettings.Pvp_FallMalefic, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Gravity_II}"
                              IsChecked="{Binding AstrologianSettings.Pvp_GravityII, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="{x:Static properties:Resources.Astrologian_Text_Gravity_II_with_at_least}"
                               Style="{DynamicResource TextBlockDefault}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="8"
                                      MinValue="1"
                                      Value="{Binding AstrologianSettings.Pvp_GravityIIEnemies, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Text="{x:Static properties:Resources.Astrologian_Text_enemies_around_target}"
                               Style="{DynamicResource TextBlockDefault}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Double_Cast}"
                              IsChecked="{Binding AstrologianSettings.Pvp_DoubleCast, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Astrologian_Content_Celestial_River_LB_with_at_least}"
                              IsChecked="{Binding AstrologianSettings.Pvp_CelestialRiver, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="4"
                                      MinValue="0"
                                      Value="{Binding AstrologianSettings.Pvp_CelestialRiverNearbyAllies, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Astrologian_Text_Allies_below}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="3"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding AstrologianSettings.Pvp_CelestialRiverHealthPercent, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="4"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Astrologian_Text__HP}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_Movement}"/>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_Healing}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Astrologian_Content_Aspected_Benefic_At}"
                              IsChecked="{Binding AstrologianSettings.Pvp_AspectedBenefic, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding AstrologianSettings.Pvp_AspectedBeneficHealthPercent, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Macrocosmos}"
                              IsChecked="{Binding AstrologianSettings.Pvp_Macrocosmos, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="{x:Static properties:Resources.Astrologian_Text_Macrocosmos_with_at_least}"
                               Style="{DynamicResource TextBlockDefault}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="8"
                                      MinValue="1"
                                      Value="{Binding AstrologianSettings.Pvp_MacrocosmosEnemies, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Text="{x:Static properties:Resources.Astrologian_Text_enemies_around}"
                               Style="{DynamicResource TextBlockDefault}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Grid.Row="0"
                              Grid.Column="0"
                              Content="{x:Static properties:Resources.Astrologian_Content_Microcosmos_At}"
                              IsChecked="{Binding AstrologianSettings.Pvp_Microcosmos, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="100"
                                      MinValue="1"
                                      Value="{Binding AstrologianSettings.Pvp_MicrocosmosHealthPercent, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Astrologian_Text_Special_Actions}"/>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Minor_Arcana}"
                              IsChecked="{Binding AstrologianSettings.Pvp_MinorArcana, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="{x:Static properties:Resources.Astrologian_Text_Lord_of_Crowns_with_at_least}"
                               Style="{DynamicResource TextBlockDefault}"/>
                    <controls:Numeric Grid.Row="0"
                                      Grid.Column="1"
                                      MaxValue="8"
                                      MinValue="1"
                                      Value="{Binding AstrologianSettings.Pvp_LordOfCrownsEnemies, Mode=TwoWay}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Text="{x:Static properties:Resources.Astrologian_Text_enemies_around_target}"
                               Style="{DynamicResource TextBlockDefault}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Oracle}"
                              IsChecked="{Binding AstrologianSettings.Pvp_Oracle, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        </StackPanel>
    </ScrollViewer>
</UserControl>
