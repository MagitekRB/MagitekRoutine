<UserControl x:Class="Magitek.Views.UserControls.Sage.FightLogic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="500"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">


        <controls:SettingsBlock Margin="0,5"
                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5"
                    Orientation="Vertical">
                <TextBlock Margin="3"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap">
        Fight Logic: <LineBreak/>       
        This allows Routines to automatically respond to TankBusters and AoE attacks by pre-shielding, using cooldowns, or applying debuffs. <LineBreak/>
        <LineBreak/>
        Only works on supported bosses and dungeons and limited to only boss-cast-bar detectable actions.
                </TextBlock>
                <TextBlock Margin="0,5"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap"
                        Text="{x:Static properties:Resources.Generic_Tankbusters}"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Haima_saved}"
                            IsChecked="{Binding SageSettings.FightLogic_Haima, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Taurochole}"
                            IsChecked="{Binding SageSettings.FightLogic_Taurochole, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Eukrasian_Diagnosis}"
                            IsChecked="{Binding SageSettings.FightLogic_EukrasianDiagnosis, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <TextBlock Margin="0,5"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap"
                        Text="{x:Static properties:Resources.Generic_Party_Aoe}"/>
                <StackPanel Margin="0,5,0,10"
                        Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Respect_Tank_In_Range_Settings_From_H}"
                            IsChecked="{Binding SageSettings.FightLogic_RespectOnlyTank, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Panhaima_saved}"
                            IsChecked="{Binding SageSettings.FightLogic_Panhaima, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Holos}"
                            IsChecked="{Binding SageSettings.FightLogic_Holos, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Kerachole}"
                            IsChecked="{Binding SageSettings.FightLogic_Kerachole, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Sage_Content_Eukrasian_Prognosis}"
                            IsChecked="{Binding SageSettings.FightLogic_EukrasianPrognosis, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                    <CheckBox Content="{x:Static properties:Resources.Astrologian_Content_Knockback}"
                            IsChecked="{Binding SageSettings.FightLogicKnockback, Mode=TwoWay}"
                            Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>        
        </StackPanel>
    </ScrollViewer>
</UserControl>