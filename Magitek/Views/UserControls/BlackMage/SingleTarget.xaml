<UserControl x:Class="Magitek.Views.UserControls.BlackMage.SingleTarget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:enums="clr-namespace:Magitek.Enumerations"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
    </UserControl.Resources>

    <StackPanel Margin="10">

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.BlackMage_Content_Paradox}" IsChecked="{Binding BlackMageSettings.Paradox, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Content="{x:Static properties:Resources.BlackMage_Content_Despair}" IsChecked="{Binding BlackMageSettings.Despair, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Content="{x:Static properties:Resources.BlackMage_Content_FlareStar}" IsChecked="{Binding BlackMageSettings.Scathe, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>
        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.BlackMage_Content_Always_Transpose_To_Astral}" IsChecked="{Binding BlackMageSettings.UseTransposeToAstral, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Content="{x:Static properties:Resources.BlackMage_Content_Always_Transpose_To_Umbral}" IsChecked="{Binding BlackMageSettings.UseTransposeToUmbral, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,3,0,0" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5" Orientation="Horizontal">
                <CheckBox Content="{x:Static properties:Resources.BlackMage_Content_Use_Thunder_Spells_Single_Target_Only}" IsChecked="{Binding BlackMageSettings.ThunderSingle, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                <controls:Numeric Margin="0,3" MaxValue="100" MinValue="1" Value="{Binding BlackMageSettings.ThunderTimeTillDeathSeconds, Mode=TwoWay}" />
                <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Seconds}" />
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,3,0,0" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Orientation="Horizontal">
            <CheckBox Margin="5" Content="{x:Static properties:Resources.BlackMage_Content_Use_Xenoglossy}" IsChecked="{Binding BlackMageSettings.Xenoglossy, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
            <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.BlackMage_Text_and_save_at_least}" />
            <controls:Numeric MaxValue="2" MinValue="0"
  Value="{Binding BlackMageSettings.SaveXenoglossyCharges, Mode=TwoWay}" />
            <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.BlackMage_Text_charges_when_moving}" />
        </StackPanel>
        </controls:SettingsBlock>

    </StackPanel>
</UserControl>