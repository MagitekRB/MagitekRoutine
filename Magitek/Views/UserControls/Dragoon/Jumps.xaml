<UserControl x:Class="Magitek.Views.UserControls.Dragoon.Jumps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties" 
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Use_Jumps}" Style="{DynamicResource CheckBoxFlat}" IsChecked="{Binding DragoonSettings.UseJumps, Mode=TwoWay}" />
                <CheckBox Margin="0,3" Content="{x:Static properties:Resources.Dragoon_Content_Safe_Jumping_Logic}" Style="{DynamicResource CheckBoxFlat}" IsChecked="{Binding DragoonSettings.SafeJumpLogic, Mode=TwoWay}" />
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Jump}" Style="{DynamicResource CheckBoxFlat}" IsChecked="{Binding DragoonSettings.UseHighJump, Mode=TwoWay}" />
                <CheckBox Margin="0,3" Content="{x:Static properties:Resources.Dragoon_Content_Spineshatter_Dive}" Style="{DynamicResource CheckBoxFlat}" IsChecked="{Binding DragoonSettings.UseSpineshatterDive, Mode=TwoWay}" />
                <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Dragonfire_Dive}" Style="{DynamicResource CheckBoxFlat}" IsChecked="{Binding DragoonSettings.UseDragonfireDive, Mode=TwoWay}" />
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Stardiver}" Style="{DynamicResource CheckBoxFlat}" IsChecked="{Binding DragoonSettings.UseStardiver, Mode=TwoWay}" />
            </StackPanel>
        </controls:SettingsBlock>        

        </StackPanel>
    </ScrollViewer>
</UserControl>