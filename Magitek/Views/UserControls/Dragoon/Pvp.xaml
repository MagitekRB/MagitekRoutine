<UserControl x:Class="Magitek.Views.UserControls.Dragoon.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:common="clr-namespace:Magitek.Views.UserControls.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
        <common:PvpUtilities DataContext="{Binding DragoonSettings}"/>

        <controls:SettingsBlock Margin="0,5,0,0"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_General}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_High_Jump}"
                              IsChecked="{Binding DragoonSettings.Pvp_HighJump, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Elusive_Jump}"
                              IsChecked="{Binding DragoonSettings.Pvp_ElusiveJump, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Chaotic_Spring}"
                              IsChecked="{Binding DragoonSettings.Pvp_ChaoticSpring, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Horrid_Roar}"
                              IsChecked="{Binding DragoonSettings.Pvp_HorridRoar, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_SkyHigh_LB}"
                              IsChecked="{Binding DragoonSettings.Pvp_SkyHigh, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Starcross}"
                              IsChecked="{Binding DragoonSettings.Pvp_Starcross, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5,0,0"
                                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Margin="0,0,0,5"
                           Style="{DynamicResource TextBlockSection}"
                           Text="{x:Static properties:Resources.Generic_Buffs}"/>
                <StackPanel Margin="5"
                            Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Dragoon_Content_Geirskogul}"
                              IsChecked="{Binding DragoonSettings.Pvp_Geirskogul, Mode=TwoWay}"
                              Style="{DynamicResource CheckBoxFlat}"/>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>        
        </StackPanel>
    </ScrollViewer>
</UserControl>

