<UserControl x:Class="Magitek.Views.UserControls.Scholar.Healing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="700"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
    </UserControl.Resources>

    <StackPanel Margin="5">

        <controls:SettingsBlock Margin="0" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Aoe_Heal_When_Allies_Need_Healing_}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Light_Party}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.AoeNeedHealingLightParty, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Full_Party}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.AoeNeedHealingFullParty, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Disable_Single_Healing_When_allies}" IsChecked="{Binding ScholarSettings.DisableSingleHealWhenNeedAoeHealing, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.AoEHealHealthPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Interrupt_Healing_If_Target_HP_Gets_Over}" IsChecked="{Binding ScholarSettings.InterruptHealing, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" Margin="3,0" Value="{Binding ScholarSettings.InterruptHealingPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11" Foreground="White" Text="{x:Static properties:Resources.Generic_Percent}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">

            <StackPanel Margin="5">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Resurrection}" IsChecked="{Binding ScholarSettings.SlowcastRes, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Grid.Column="1" Margin="5,0" Content="{x:Static properties:Resources.Scholar_Content_Swiftcast_Resurrection}" IsChecked="{Binding ScholarSettings.SwiftcastRes, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Grid.Column="2" Margin="5,0" Content="{x:Static properties:Resources.Scholar_Content_Resurrection_Out_of_Combat}" IsChecked="{Binding ScholarSettings.ResOutOfCombat, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </Grid>
                
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Resurrection_Delay}" />
                    <controls:Numeric MinValue="0" MaxValue="10" Value="{Binding ScholarSettings.ResDelay, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="seconds" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <!--  Physick  -->
                <Grid Grid.Row="0" Margin="5,5,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Physick}" IsChecked="{Binding ScholarSettings.Physick, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.PhysickHpPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,1" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </Grid>

                <Border Grid.Row="1" Padding="5,2" Background="{DynamicResource AlternatingSettingRow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Adloquium}" IsChecked="{Binding ScholarSettings.Adloquium, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.AdloquiumHpPercent, Mode=TwoWay}" />
                        <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                        <CheckBox Grid.Column="3" Margin="10,1,0,1" Content="{x:Static properties:Resources.Generic_Only_Tank}" IsChecked="{Binding ScholarSettings.AdloquiumOnlyTank, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Grid.Column="4" Margin="10,1,0,1" Content="{x:Static properties:Resources.Scholar_Content_Only_Healer}" IsChecked="{Binding ScholarSettings.AdloquiumOnlyHealer, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </Grid>
                </Border>

                <Grid Grid.Row="2" Margin="5,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Lustrate}" IsChecked="{Binding ScholarSettings.Lustrate, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.LustrateHpPercent, Mode=TwoWay}" />
                    <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Grid.Column="3" Margin="10,0" Content="{x:Static properties:Resources.Generic_Only_Tank}" IsChecked="{Binding ScholarSettings.LustrateOnlyTank, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Grid.Column="4" Content="{x:Static properties:Resources.Scholar_Content_Only_Healer}" IsChecked="{Binding ScholarSettings.LustrateOnlyHealer, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </Grid>

                <Border Grid.Row="3" Padding="5,2" Background="{DynamicResource AlternatingSettingRow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Succor}" IsChecked="{Binding ScholarSettings.Succor, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.SuccorHpPercent, Mode=TwoWay}" />
                        <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    </Grid>
                </Border>

                <Border Grid.Row="4" Padding="5,2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Indomitability}" IsChecked="{Binding ScholarSettings.Indomitability, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.IndomitabilityHpPercent, Mode=TwoWay}" />
                        <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    </Grid>
                </Border>

                <Border Grid.Row="5" Padding="5,2,0,5" Background="{DynamicResource AlternatingSettingRow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" Content="{x:Static properties:Resources.Scholar_Content_Sacred_Soil}" IsChecked="{Binding ScholarSettings.SacredSoil, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <controls:Numeric Grid.Column="1" MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.SacredSoilHpPercent, Mode=TwoWay}" />
                        <TextBlock Grid.Column="2" Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    </Grid>
                </Border>

            </Grid>
        </controls:SettingsBlock>
        
        <controls:SettingsBlock Margin="0,5,0,0" Background="{DynamicResource ClassSelectorBackground}">
            <CheckBox Margin="5" Content="{x:Static properties:Resources.Scholar_Content_Place_Sacred_Soil_on_the_party_mem}" IsChecked="{Binding ScholarSettings.SacredSoilCenterParty, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">

                <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Emergency_Tactics}" IsChecked="{Binding ScholarSettings.EmergencyTactics, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />

                <StackPanel Margin="0,3,0,0" Orientation="Horizontal">

                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Adloquium}" IsChecked="{Binding ScholarSettings.EmergencyTacticsAdloquium, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.EmergencyTacticsAdloquiumHealthPercent, Mode=TwoWay}" />
                        <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Succor}" IsChecked="{Binding ScholarSettings.EmergencyTacticsSuccor, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.EmergencyTacticsSuccorHealthPercent, Mode=TwoWay}" />
                        <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />

                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Background="{DynamicResource ClassSelectorBackground}">
            <Grid Margin="5">
                <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Keep_Adloquium_Galvanize_Up_On_The}" IsChecked="{Binding ScholarSettings.AdloquiumTankForBuff, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
            </Grid>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5,0,0" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Excogitation}" IsChecked="{Binding ScholarSettings.Excogitation, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.ExcogitationHpPercent, Mode=TwoWay}" />
                    <TextBlock Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Margin="10,0" Content="{x:Static properties:Resources.Generic_Only_Tank}" IsChecked="{Binding ScholarSettings.ExcogitationOnlyTank, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Only_Healer}" IsChecked="{Binding ScholarSettings.ExcogitationOnlyHealer, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Margin="1" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Seraphism}" IsChecked="{Binding ScholarSettings.Seraphism, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <TextBlock Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="When" />
                    <controls:Numeric MaxValue="8" MinValue="1" Value="{Binding ScholarSettings.SeraphismAllies, Mode=TwoWay}" />
                    <TextBlock Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Allies_Fall_Below}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.SeraphismHealthPercent, Mode=TwoWay}" />
                    <TextBlock Margin="2,0,3,0" Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Scholar_Text_HP_Percent}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Manifestation}" IsChecked="{Binding ScholarSettings.Manifestation, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.ManifestationHpPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                    <CheckBox Content="{x:Static properties:Resources.Scholar_Content_Accession}" IsChecked="{Binding ScholarSettings.Accession, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="100" MinValue="1" Value="{Binding ScholarSettings.AccessionHpPercent, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Health_Percent}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>
    </StackPanel>

</UserControl>
