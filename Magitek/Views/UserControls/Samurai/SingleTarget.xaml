<UserControl x:Class="Magitek.Views.UserControls.Samurai.SingleTarget" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:Magitek.Controls" 
             xmlns:enums="clr-namespace:Magitek.Enumerations"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ObjectDataProvider x:Key="SamuraiFillerStrategy" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:SamuraiFillerStrategy" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="InterruptStrategy" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:InterruptStrategy" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <controls:SettingsBlock Margin="0,2" Background="{DynamicResource ClassSelectorBackground}">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Generic_Use_Interrupt_And_Stun_If_Activated}" IsChecked="{Binding SamuraiSettings.UseStunOrInterrupt, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <ComboBox Width="170" ItemsSource="{Binding Source={StaticResource InterruptStrategy}}" SelectedValue="{Binding SamuraiSettings.Strategy, Mode=TwoWay}" Style="{DynamicResource ComboBox}" />
                </StackPanel>
            </controls:SettingsBlock>
            <controls:SettingsBlock Margin="0,2" Background="{DynamicResource ClassSelectorBackground}">
                <StackPanel Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="0,3" Content="{x:Static properties:Resources.Generic_Hide_Positional_Message}" IsChecked="{Binding SamuraiSettings.HidePositionalMessage, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>
            </controls:SettingsBlock>

            <controls:SettingsBlock Margin="0,0,0,0" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Style="{DynamicResource TextBlockSection}" Text="{x:Static properties:Resources.Samurai_Text_oGCD___Using_kenki}" />
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Hissatsu_Gyoten_Dash_forward}" IsChecked="{Binding SamuraiSettings.UseHissatsuGyoten, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Hissatsu_Shinten}" IsChecked="{Binding SamuraiSettings.UseHissatsuShinten, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Hissatsu_Senei}" IsChecked="{Binding SamuraiSettings.UseHissatsuSenei, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>

                <TextBlock Margin="0 8 0 0" Style="{DynamicResource TextBlockSection}" Text="{x:Static properties:Resources.Samurai_Text_oGCD___Using_meditation}" />
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Shoha}" IsChecked="{Binding SamuraiSettings.UseShoha, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>

                <TextBlock Margin="0 8 0 0" Style="{DynamicResource TextBlockSection}" Text="{x:Static properties:Resources.Samurai_Text_GCD___TsubameGaeshi}" />
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Kaeshi_Higanbana}" IsChecked="{Binding SamuraiSettings.UseKaeshiHiganbana, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Kaeshi_Setsugekka}" IsChecked="{Binding SamuraiSettings.UseKaeshiSetsugekka, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>

                <TextBlock Margin="0 8 0 0" Style="{DynamicResource TextBlockSection}" Text="{x:Static properties:Resources.Samurai_Text_GCD___Iaijutsu}" />
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Higabana}" IsChecked="{Binding SamuraiSettings.UseHiganbana, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Only_Bosses}" IsChecked="{Binding SamuraiSettings.HiganbanaOnlyBoss, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Samurai_Content_Higabana}" />
                        <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Text_but_do_Not_Use_If_Enemy_Is_Dying_Within}" />
                        <controls:Numeric  MaxValue="100" MinValue="1" Value="{Binding SamuraiSettings.DontHiganbanaIfEnemyDyingWithinSeconds, Mode=TwoWay}" />
                        <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Seconds}" />
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Midare_Setsugekka}" IsChecked="{Binding SamuraiSettings.UseMidareSetsugekka, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>

                <TextBlock Margin="0 8 0 0" Style="{DynamicResource TextBlockSection}" Text="{x:Static properties:Resources.Samurai_Text_GCD___Other}" />
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox Content="{x:Static properties:Resources.Samurai_Content_Enpi_when_not_in_range}" IsChecked="{Binding SamuraiSettings.UseEnpi, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Reserve}" />
                    <controls:Numeric MaxValue="100" MinValue="0" Value="{Binding SamuraiSettings.ReservedKenki, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Samurai_Text_Kenki_for_Manual_Spells_GyotenYaten}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

            <controls:SettingsBlock Margin="0,5,0,0" Background="{DynamicResource ClassSelectorBackground}">
                <StackPanel Margin="5">
                    <TextBlock Margin="0,0,0,5" Style="{DynamicResource TextBlockSection}" Text="{x:Static properties:Resources.Generic_Advance_Burst_Window_Settings}" />
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <CheckBox Content="{x:Static properties:Resources.Generic_Hold_Burst}" IsChecked="{Binding SamuraiSettings.BurstLogicHoldBurst, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>
            </controls:SettingsBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
