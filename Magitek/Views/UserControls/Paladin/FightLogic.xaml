<UserControl x:Class="Magitek.Views.UserControls.Paladin.FightLogic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
        <controls:SettingsBlock Margin="0,5,0,0"
                Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <TextBlock Margin="3"
                        Style="{DynamicResource TextBlockDefault}"
                        TextWrapping="Wrap">
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic}"/>: <LineBreak/>       
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Description}"/> <LineBreak/>
                    <LineBreak/>
                    <Run Text="{x:Static properties:Resources.Generic_Fight_Logic_Limitation}"/>
                </TextBlock>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Generic_Fightlogic_Use_Defensives}"
                                IsChecked="{Binding PaladinSettings.FightLogicDefensives, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Paladin_Content_FightLogic_Use_Divine_Veil}"
                                IsChecked="{Binding PaladinSettings.FightLogicPartyShield, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Generic_Fightlogic_Use_Reprisal}"
                                IsChecked="{Binding PaladinSettings.FightLogicReprisal, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                Content="{x:Static properties:Resources.Generic_Fightlogic_Use_Knockback}"
                                IsChecked="{Binding PaladinSettings.FightLogicKnockback, Mode=TwoWay}"
                                Style="{DynamicResource CheckBoxFlat}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        </StackPanel>
    </ScrollViewer>

</UserControl>
