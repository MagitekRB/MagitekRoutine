<UserControl x:Class="Magitek.Views.UserControls.Warrior.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:common="clr-namespace:Magitek.Views.UserControls.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

        <UserControl.DataContext>
                <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
        </UserControl.DataContext>

        <UserControl.Resources>
                <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
        </UserControl.Resources>

        <StackPanel Margin="5">
                <common:PvpUtilities DataContext="{Binding WarriorSettings}"/>


                <controls:SettingsBlock Margin="0,5,0,0"
                                        Background="{DynamicResource ClassSelectorBackground}">
                        <StackPanel Margin="5">
                                <TextBlock Style="{DynamicResource TextBlockSection}"
                                           Text="{x:Static properties:Resources.Generic_General}"/>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_FellCleave}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_FellCleave, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Blota}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_Blota, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Chaotic_Cyclone}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_ChaoticCyclone, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Primal_Rend}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_PrimalRend, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Primal_Ruination}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_PrimalRuination, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Inner_Chaos}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_InnerChaos, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Grid.Row="2"
                                                  Grid.Column="0"
                                                  Content="{x:Static properties:Resources.Warrior_Content_Orogeny_with_at_least}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_Orogeny, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <controls:Numeric Grid.Row="2"
                                                          Grid.Column="1"
                                                          MaxValue="100"
                                                          MinValue="1"
                                                          Value="{Binding WarriorSettings.Pvp_OrogenyHealthPercent, Mode=TwoWay}"/>
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="2"
                                                   Style="{DynamicResource TextBlockDefault}"
                                                   Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Grid.Row="2"
                                                  Grid.Column="0"
                                                  Content="{x:Static properties:Resources.Warrior_Content_Onslaught_with_at_least}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_Onslaught, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <controls:Numeric Grid.Row="2"
                                                          Grid.Column="1"
                                                          MaxValue="100"
                                                          MinValue="1"
                                                          Value="{Binding WarriorSettings.Pvp_OnslaughtHealthPercent, Mode=TwoWay}"/>
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="2"
                                                   Style="{DynamicResource TextBlockDefault}"
                                                   Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Primal_Rend_Onslaught_Only_in_Mele}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_SafePrimalRendNOnslaught, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Primal_Scream}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_PrimalScream, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Primal_Wrath}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_PrimalWrath, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                        </StackPanel>
                </controls:SettingsBlock>

                <controls:SettingsBlock Margin="0,5,0,0"
                                        Background="{DynamicResource ClassSelectorBackground}">
                        <StackPanel Margin="5">
                                <TextBlock Margin="0,0,0,5"
                                           Style="{DynamicResource TextBlockSection}"
                                           Text="{x:Static properties:Resources.Generic_Buffs}"/>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.Warrior_Content_Bloodwhetting}"
                                                  IsChecked="{Binding WarriorSettings.Pvp_Bloodwhetting, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                        </StackPanel>
                </controls:SettingsBlock>
        </StackPanel>
</UserControl>

