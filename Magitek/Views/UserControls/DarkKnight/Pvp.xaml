<UserControl x:Class="Magitek.Views.UserControls.DarkKnight.Pvp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="400"
             d:DesignWidth="500"
             mc:Ignorable="d">

        <UserControl.DataContext>
                <Binding Source="{x:Static viewModels:BaseSettings.Instance}"/>
        </UserControl.DataContext>

        <UserControl.Resources>
                <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
        </UserControl.Resources>

        <StackPanel Margin="5">
                <controls:SettingsBlock Margin="0,5"
                                        Background="{DynamicResource ClassSelectorBackground}">
                        <StackPanel>
                                <TextBlock Style="{DynamicResource TextBlockSection}"
                                           Text="{x:Static properties:Resources.Generic_Utilities}"/>
                                <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Row="0"
                                                  Grid.Column="0"
                                                  Content="{x:Static properties:Resources.Generic_Purify_Remove_Debuffs}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_UsePurify, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>

                                        <CheckBox Grid.Row="1"
                                                  Grid.Column="0"
                                                  Content="{x:Static properties:Resources.Generic_Guard_Shield_At}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_UseGuard, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <controls:Numeric Grid.Row="1"
                                                          Grid.Column="1"
                                                          MaxValue="100"
                                                          MinValue="1"
                                                          Value="{Binding DarkKnightSettings.Pvp_GuardHealthPercent, Mode=TwoWay}"/>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Style="{DynamicResource TextBlockDefault}"
                                                   Text="{x:Static properties:Resources.Generic_Health_Percent}"/>

                                        <CheckBox Grid.Row="2"
                                                  Grid.Column="0"
                                                  Content="{x:Static properties:Resources.Generic_Recuperate_Heal_At}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_UseRecuperate, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <controls:Numeric Grid.Row="2"
                                                          Grid.Column="1"
                                                          MaxValue="100"
                                                          MinValue="1"
                                                          Value="{Binding DarkKnightSettings.Pvp_RecuperateHealthPercent, Mode=TwoWay}"/>
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="2"
                                                   Style="{DynamicResource TextBlockDefault}"
                                                   Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                                </Grid>
                        </StackPanel>
                </controls:SettingsBlock>

                <controls:SettingsBlock Margin="0,5"
                                        Background="{DynamicResource ClassSelectorBackground}">
                        <StackPanel Margin="5">
                                <StackPanel Margin="5">
                                        <CheckBox Content="{x:Static properties:Resources.Generic_Sprint_Without_Target}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_SprintWithoutTarget, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                        <CheckBox Content="{x:Static properties:Resources.Generic_Use_Mount}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_UseMount, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                        <CheckBox Content="{x:Static properties:Resources.Generic_Dont_Attack_Guard}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_GuardCheck, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                        <CheckBox Content="{x:Static properties:Resources.Generic_Dont_Attack_Invuln_Hallowed_Gro}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_InvulnCheck, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                        </StackPanel>
                </controls:SettingsBlock>

                <controls:SettingsBlock Margin="0,5,0,0"
                                        Background="{DynamicResource ClassSelectorBackground}">
                        <StackPanel Margin="5">
                                <TextBlock Style="{DynamicResource TextBlockSection}"
                                           Text="General"/>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="Bloodspiller                    "
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_Bloodspiller, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <CheckBox Content="Impalement "
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_Impalement, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="Plunge                            "
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_Plunge, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Salted_Earth}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_SaltedEarth, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Plunge_Only_in_Melee_Range}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_SafePlunge, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Shadowbringer_with_at_least_Enemies}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_Shadowbringer, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <controls:Numeric Grid.Row="1"
                                                          Grid.Column="1"
                                                          MaxValue="100"
                                                          MinValue="20"
                                                          Value="{Binding DarkKnightSettings.Pvp_ShadowbringerHealthPercent, Mode=TwoWay}"/>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Style="{DynamicResource TextBlockDefault}"
                                                   Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Scarlet_Delirium}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_ScarletDelirium, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Salt_and_Darkness}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_SaltAndDarkness, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="Disesteem"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_Disesteem, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Eventide_under}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_Eventide, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                        <controls:Numeric Grid.Row="1"
                                                          Grid.Column="1"
                                                          MaxValue="100"
                                                          MinValue="20"
                                                          Value="{Binding DarkKnightSettings.Pvp_EventideHealthPercent, Mode=TwoWay}"/>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Style="{DynamicResource TextBlockDefault}"
                                                   Text="{x:Static properties:Resources.Generic_Health_Percent}"/>
                                </StackPanel>
                        </StackPanel>
                </controls:SettingsBlock>

                <controls:SettingsBlock Margin="0,5,0,0"
                                        Background="{DynamicResource ClassSelectorBackground}">
                        <StackPanel Margin="5">
                                <TextBlock Margin="0,0,0,5"
                                           Style="{DynamicResource TextBlockSection}"
                                           Text="{x:Static properties:Resources.Generic_Buffs}"/>
                                <StackPanel Margin="5"
                                            Orientation="Horizontal">
                                        <CheckBox Content="{x:Static properties:Resources.DarkKnight_Content_Blackest_Night}"
                                                  IsChecked="{Binding DarkKnightSettings.Pvp_BlackestNight, Mode=TwoWay}"
                                                  Style="{DynamicResource CheckBoxFlat}"/>
                                </StackPanel>
                        </StackPanel>
                </controls:SettingsBlock>
        </StackPanel>
</UserControl>

