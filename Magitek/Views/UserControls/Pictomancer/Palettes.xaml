<UserControl x:Class="Magitek.Views.UserControls.Pictomancer.Palettes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:controls="clr-namespace:Magitek.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enums="clr-namespace:Magitek.Enumerations"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels"
             d:DesignHeight="550"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ObjectDataProvider x:Key="InterruptStrategy" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:InterruptStrategy" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Pre_cast_palettes_out_of_comba}" IsChecked="{Binding PictomancerSettings.PrePaletteOutOfCombat, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Only_when_in_a_duty}" IsChecked="{Binding PictomancerSettings.PrePaletteOutOfCombatOnlyInDuty, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Cast_palettes_during_combat_wi}" IsChecked="{Binding PictomancerSettings.PaletteDuringDowntime, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_HardSlow_Cast_palettes_during_}" IsChecked="{Binding PictomancerSettings.PaletteDuringStarry, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Motifs}" IsChecked="{Binding PictomancerSettings.UseMotifs, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Swiftcast_Motifs}" IsChecked="{Binding PictomancerSettings.SwiftcastMotifs, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Only_when_moving}" IsChecked="{Binding PictomancerSettings.SwiftcastMotifsOnlyWhenMoving, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Swiftcast_Creature}" IsChecked="{Binding PictomancerSettings.SwiftcastCreatureMotifs, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Swiftcast_Weapon}" IsChecked="{Binding PictomancerSettings.SwiftcastWeaponMotifs, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Swiftcast_Landscape}" IsChecked="{Binding PictomancerSettings.SwiftcastLandscapeMotifs, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Muses}" IsChecked="{Binding PictomancerSettings.UseMuses, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Hammers}" IsChecked="{Binding PictomancerSettings.UseHammers, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Save_a_hammer_for_movement}" IsChecked="{Binding PictomancerSettings.SaveHammerForMovement, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_only_during_boss_fights}" IsChecked="{Binding PictomancerSettings.SaveHammerForMovementOnlyBoss, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Mog_Madeen}" IsChecked="{Binding PictomancerSettings.UseHammers, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Star_Prism}" IsChecked="{Binding PictomancerSettings.UseStarPrism, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Enable_Starry_Sky}" IsChecked="{Binding PictomancerSettings.UseStarrySky, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                </StackPanel>
                <StackPanel Margin="10,0" Orientation="Horizontal">
                    <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Entire_Party_In_Range_Otherwis}" IsChecked="{Binding PictomancerSettings.StarrySkyEntireParty, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    <controls:Numeric MaxValue="30" MinValue="1" Value="{Binding PictomancerSettings.StarrySkyCount, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Players_Are_In_Range_For_Buff}" />
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>

        <controls:SettingsBlock Margin="0,5" Background="{DynamicResource ClassSelectorBackground}">
            <StackPanel Margin="5">
                <!-- <StackPanel Margin="10,0" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Pictomancer_Text_Save_hammermog_for_Starry_within}" />
                    <controls:Numeric MaxValue="120" MinValue="0" Value="{Binding PictomancerSettings.SaveForStarryMSeconds, Mode=TwoWay}" />
                    <TextBlock Style="{DynamicResource TextBlockDefault}" Text="{x:Static properties:Resources.Generic_Seconds}" />
                </StackPanel> -->

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Hammers_During_Hyperphanta}" IsChecked="{Binding PictomancerSettings.UseHammerDuringHyperphantasia, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Save_Hammers_for_Starry}" IsChecked="{Binding PictomancerSettings.SaveHammerForStarry, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Save_Comet_in_Black_for_Starry}" IsChecked="{Binding PictomancerSettings.SaveCometInBlackForStarry, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Only_use_Comet_with_Starry}" IsChecked="{Binding PictomancerSettings.CometInBlackOnlyDuringStarry, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_extra_comets_only_during_m}" IsChecked="{Binding PictomancerSettings.SaveCometInBlackForStarryMovement, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Use_Mog_Madeen_During_Hyperpha}" IsChecked="{Binding PictomancerSettings.UseMogDuringHyperphantasia, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                        <CheckBox Margin="5" Content="{x:Static properties:Resources.Pictomancer_Content_Save_Mog_Madeen_for_Starry}" IsChecked="{Binding PictomancerSettings.SaveMogForStarry, Mode=TwoWay}" Style="{DynamicResource CheckBoxFlat}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </controls:SettingsBlock>        
        </StackPanel>
    </ScrollViewer>
</UserControl>

