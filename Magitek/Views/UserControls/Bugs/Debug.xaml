<UserControl x:Class="Magitek.Views.UserControls.Bugs.Debug"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Magitek.Properties"
             xmlns:contols="clr-namespace:Magitek.Controls"
             xmlns:viewModels="clr-namespace:Magitek.ViewModels">

    <UserControl.DataContext>
        <Binding Source="{x:Static viewModels:Debug.Instance}"/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml"/>
    </UserControl.Resources>

    <StackPanel Margin="5">
        <TextBlock Margin="3"
                   Style="{DynamicResource TextBlockDefault}"
                   TextWrapping="Wrap">Routine Behavior Settings</TextBlock>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Use_AutoFace_for_InView_checks}"
                  IsChecked="{Binding Settings.UseAutoFaceChecks, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Allow_Magitek_to_move_in_autonomous_mode}"
                  IsChecked="{Binding Settings.MagitekMovement, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Use_Advanced_SpellHistory_Verify_spell_casting}"
                  IsChecked="{Binding Settings.UseAdvancedSpellHistory2, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Use_Animation_Lock_Waits_for_game_client}"
                  IsChecked="{Binding Settings.DebugActionLockWait2, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Use_Cast_Or_Queue}"
                  IsChecked="{Binding Settings.UseCastOrQueue, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>

        <TextBlock Margin="3"
                   Style="{DynamicResource TextBlockDefault}"
                   TextWrapping="Wrap">Debugging Settings</TextBlock>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_CallerMemberName_When_Casting_Very_Specific_Spells}"
                  IsChecked="{Binding Settings.DebugCastingCallerMemberName, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="20,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Include_File_Path}"
                  IsChecked="{Binding Settings.DebugCastingCallerMemberNameIncludePath, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Debug_Enemy_Info_Prints_RemovesAdds_in_combat}"
                  IsChecked="{Binding Settings.DebugEnemyInfo, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>
        <CheckBox Margin="0,0,0,3"
                  Content="{x:Static properties:Resources.Bugs_Content_Enable_Casting_Debugging}"
                  IsChecked="{Binding Settings.DebugPlayerCasting, Mode=TwoWay}"
                  Style="{DynamicResource CheckBoxFlat}"/>



        <StackPanel Margin="0,10,0,0"
                    Orientation="Horizontal">

            <!--  Left Column  -->
            <StackPanel>

                <!--  Combat Debug  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Casting_Spell}"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding CastingSpell.LocalizedName}"/>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Spell_Target}"/>
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding SpellTarget.Name}"/>

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Casting_Time}"/>
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding CastingTime}"/>

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Casting_Heal}"/>
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding CastingHeal}"/>

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Health_Checks}"/>
                    <TextBlock Grid.Row="5"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding DoHealthChecks}"/>

                    <TextBlock Grid.Row="6"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Need_Aura}"/>
                    <TextBlock Grid.Row="6"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding NeedAura}"/>

                    <TextBlock Grid.Row="7"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Aura}"/>
                    <TextBlock Grid.Row="7"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding Aura}"/>

                    <TextBlock Grid.Row="8"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Use_Refresh_Time}"/>
                    <TextBlock Grid.Row="8"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding UseRefreshTime}"/>

                    <TextBlock Grid.Row="9"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Refresh_Time}"/>
                    <TextBlock Grid.Row="9"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding RefreshTime}"/>

                    <TextBlock Grid.Row="10"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Last_Spell}"/>
                    <TextBlock Grid.Row="10"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding LastSpell.LocalizedName}"/>

                    <TextBlock Grid.Row="11"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Casting_Gambit}"/>
                    <TextBlock Grid.Row="11"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding CastingGambit}"/>

                    <TextBlock Grid.Row="12"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Action_Lock}"/>
                    <TextBlock Grid.Row="12"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding ActionLock}"/>

                    <TextBlock Grid.Row="13"
                               Grid.Column="0"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Action_Queued}"/>
                    <TextBlock Grid.Row="13"
                               Grid.Column="1"
                               Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding ActionQueued}"/>

                </Grid>

                <!--  Current Target Boss?  -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource TextBlockDefault}"
                               Text="{x:Static properties:Resources.Bugs_Text_Current_Target_Boss}"/>
                    <TextBlock Style="{DynamicResource TextBlockDefault}"
                               Text="{Binding IsBoss}"/>
                </StackPanel>

            </StackPanel>


            <!--  Right Column  -->
            <StackPanel Margin="60,0,0,0">

                <!--  Timers  -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_In_Combat_Time}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding InCombatTime}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_Out_Of_Combat_Time}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding OutOfCombatTime}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_In_Combat_Moving_Time}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding InCombatMovingTime}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_Not_Moving_In_Combat_Time}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding NotMovingInCombatTime}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_Duty_State}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding DutyState}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_Time_In_Duty}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding DutyTime}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_Time_Left_In_Combat}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding InCombatTimeLeft}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{x:Static properties:Resources.Bugs_Text_Current_Target_Combat_Time_Left}"/>
                        <TextBlock Style="{DynamicResource TextBlockDefault}"
                                   Text="{Binding TargetCombatTimeLeft}"/>
                    </StackPanel>
                </StackPanel>

                <!--  Enemies in Combat  -->
                <TextBlock Style="{DynamicResource TextBlockDefault}"
                           Text="{x:Static properties:Resources.Generic_Text_Enemies_In_Combat}"/>
                <ListBox Height="100"
                         MaxHeight="160"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding Enemies}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Style="{DynamicResource ListboxNoBorderSearch}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid IsHitTestVisible="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Margin="2,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="10"
                                           Foreground="White"
                                           Text="{Binding Unit}"/>
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           FontSize="10"
                                           Foreground="White"
                                           Text="{Binding CombatTimeLeft}"/>
                            </Grid>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>

        </StackPanel>

        <!--  Spell Queue  -->
        <StackPanel>
            <TextBlock Style="{DynamicResource TextBlockDefault}"
                       Text="{x:Static properties:Resources.Bugs_Text_Spell_Queues_Includes_Opener}"/>
            <ListBox Width="200"
                     Height="150"
                     MaxHeight="150"
                     HorizontalAlignment="Left"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemsSource="{Binding Queue}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Style="{DynamicResource ListboxNoBorderSearch}">
                <ListBox.ItemTemplate>
                    <DataTemplate>

                        <Grid IsHitTestVisible="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Margin="2,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       Foreground="White"
                                       Text="{Binding Spell.Name}"/>
                        </Grid>

                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </StackPanel>
</UserControl>

